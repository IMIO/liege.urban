       bound_licence python: hasattr(context, 'getBound_licence') and context.getUse_bound_licence_infos() and context.getBound_licence();
       inquiries python: view.getInquiriesForDisplay();
       member context/@@plone_portal_state/member;
     "
     i18n:domain="urban"
>
  <fieldset tal:repeat="inquiry inquiries">
    <legend i18n:translate="urban_label_solicitOpinionsTo">Solicit opinion to</legend>
    <metal:parent_call use-macro="here/@@licencetabs-macros/advices_table-macro" />
  </fieldset>
  <br />
</div>

<table class="no-style-table"
       cellpadding="0"
       cellspacing="0"
       metal:define-macro="advices_table-macro"
       width="100%"
       tal:define="
         exclude python: ['solicitOpinionsTo', 'solicitOpinionsToOptional'];
       "
       i18n:domain="urban"
>
  <tr tal:repeat="field view/getAdviceFields">
    <tal:vars define="
                fieldname field/getName;
              ">

      <tal:normal_field condition="python: fieldname not in exclude">
        <td valign="top"><b><span tal:content="string:urban_label_${fieldname}"
                  i18n:translate=""
            ></span>:</b></td>
        <td width="10px"></td>
        <td valign="top"><metal:myfield use-macro="python:here.widget(fieldname, mode='view')" />
          <span class="discreet"
                tal:condition="nullvalue"
                i18n:translate="content_none"
          >Aucun(e)</span>
        </td>
      </tal:normal_field>

      <tal:opinions condition="python: fieldname in ['solicitOpinionsTo', 'solicitOpinionsToOptional']">
        <td colspan="3"
            style="padding-top: 1em;"
            tal:define="
              opinionIds python:inquiry.getSolicitOpinionsTo() if fieldname == 'solicitOpinionsTo' else inquiry.getSolicitOpinionsToOptional();
              checkPermission python: here.portal_membership.checkPermission;
            "
        >
          <label tal:content="field/widget/label_msgid | field/widget/label"
                 i18n:translate=""
          ></label>
          <table class="listing"
                 cellpadding="0"
                 cellspacing="0"
                 width="100%"
                 tal:condition="opinionIds"
          >
            <thead>
              <tr>
                <th i18n:translate="urban_label_requestedOrganisation">Organisation</th>

                <th i18n:translate="urban_label_askingDate">Asking Date</th>
                <th i18n:translate="urban_label_receiptDate">Receipt date</th>
                <th i18n:translate="urban_label_externalDecision">Advice</th>
              </tr>
            </thead>
            <tbody tal:define="
                     tool python: context.portal_urban;
                   ">
              <tr tal:repeat="opinionId opinionIds">
                <tal:block define="
                             opinion python: inquiry.getLinkedUrbanEventOpinionRequest(opinionId);
                             can_see python: opinion is not None and checkPermission('View', opinion);
                           ">
                  <tal:aneventislinked condition="can_see">
                    <td>
                      <a href="#"
                         tal:content="python: inquiry.getSolicitOpinionValue(opinionId)"
                         tal:attributes="
                           href opinion/absolute_url;
                         "
                      >
                                            Opinion request
                      </a>
                    </td>
                    <td tal:define="
                          eventDate opinion/getEventDate;
                        ">
                      <span class="#"
                            tal:content="python: eventDate and tool.formatDate(eventDate, translatemonth=False) or 'content_none'"
                            tal:attributes="
                              class python: eventDate and 'plain' or 'discreet';
                            "
                            i18n:translate=""
                      >None
                      </span>
                    </td>
                    <td tal:define="
                          receiptDate opinion/getReceiptDate;
                        ">
                      <span class="#"
                            tal:content="python: receiptDate and tool.formatDate(receiptDate, translatemonth=False) or 'content_none'"
                            tal:attributes="
                              class python: receiptDate and 'plain' or 'discreet';
                            "
                            i18n:translate=""
                      >None
                      </span>
                    </td>
                    <td tal:define="
                          advice python: here.getValueForTemplate('externalDecision', obj=opinion);
                        ">
                      <span class="#"
                            tal:content="python: advice and advice or 'content_none'"
                            tal:attributes="
                              class python: advice and 'plain' or 'discreet';
                            "
                            i18n:translate=""
                      >None
                      </span>
                    </td>
                  </tal:aneventislinked>
                  <tal:noeventislinked condition="not: can_see">
                    <td tal:content="python: inquiry.getSolicitOpinionValue(opinionId)">Opinion request</td>
                    <td><span class="discreet"
                            i18n:translate="content_none"
                      >Aucun(e)</span></td>
                    <td><span class="discreet"
                            i18n:translate="content_none"
                      >Aucun(e)</span></td>
                    <td><span class="discreet"
                            i18n:translate="content_none"
                      >Aucun(e)</span></td>
                  </tal:noeventislinked>
                </tal:block>
              </tr>
            </tbody>
          </table>
        </td>
      </tal:opinions>
    </tal:vars>
  </tr>
</table>


<div class="licence-column"
     metal:define-macro="inquiry_macro"
     tal:define="
       inquiry_type view/getInquiryType;
       inquiries view/getInquiriesForDisplay;
       bound_roaddecrees_inquiries view/getRoadDecreesInquiriesForDisplay;
       member context/@@plone_portal_state/member;
     "
     i18n:domain="urban"
>
  <fieldset tal:repeat="inquiry inquiries">
    <legend>
      <span class="contenttype-inquiry"
            i18n:translate="inquiry_title_and_number"
      >
                Inquiry
        <span tal:content="repeat/inquiry/number"
              i18n:name="number"
        ></span>
      </span>
    </legend>
    <tal:comment replace="nothing">
            Do not show the actions on the Licence object representing the first inquiry,
            only on following ones wich are real Inquiry objects
    </tal:comment>
    <tal:actions define="
                   repeatindex repeat/inquiry/index;
                 "
                 condition="python: not repeatindex == 0"
    >
      <div metal:define-macro="urbanActionsMacro"
           tal:define="
             member context/@@plone_portal_state/member;
             actionsToHide actionsToHide|python:();
           "
           i18n:domain="urban"
      >

        <div align="right">
          <!-- Edit action -->
          <tal:edit_action condition="python: member.has_permission('Modify portal content', inquiry)">
            <a class="noPadding"
               tal:attributes="
                 href python: inquiry.absolute_url() + '/edit';
               "
            >
              <img src="#"
                   title="label_edit"
                   tal:attributes="
                     src string:${portal_url}/edit.png;
                   "
                   i18n:attributes="title"
              />
            </a>
          </tal:edit_action>

          <!-- Own management of the "delete" action -->
          <tal:delete_action condition="python: member.has_permission('Delete objects', inquiry)">
            <a class="urbanDelete noPadding"
               tal:attributes="
                 href python: inquiry.absolute_url() + '/delete_confirmation';
               "
            >
              <!-- Icon -->
              <img onclick="javascript:confirmDeleteObject(this)"
                   src="#"
                   style="cursor:pointer"
                   title="label_remove"
                   tal:attributes="
                     src string:${portal_url}/delete_icon.png;
                   "
                   i18n:attributes="title"
              />
            </a>
          </tal:delete_action>
        </div>
      </div>
    </tal:actions>
    <metal:parent_call use-macro="here/@@licencetabs-macros/inquiry_table-macro" />
  </fieldset>
  <br />
  <metal:custom_add_inquiry define-slot="custom_add_inquiry">
    <form action="createObject"
          method="post"
          name="quickAdd"
          tal:condition="python: member.has_permission('urban: Add {}'.format(inquiry_type), context)"
          tal:attributes="
            action python: context.absolute_url() + '/createObject';
          "
          i18n:domain="urban"
    >
      <input name="type_name"
             type="hidden"
             value="#"
             tal:attributes="
               value inquiry_type;
             "
      />
      <input class="context apButton contenttype-inquiry"
             id="event"
             type="submit"
             value="add_an_inquiry"
             i18n:attributes="value"
      />
    </form>
  </metal:custom_add_inquiry>
  <tal:roaddecrees_inquiry repeat="roaddecree_inquiries bound_roaddecrees_inquiries">
    <fieldset tal:define="
                roaddecree python: roaddecree_inquiries[0];
                inquiries python: roaddecree_inquiries[1];
              ">
      <legend>
        <a tal:attributes="
             href python: roaddecree.absolute_url();
           ">
          <span i18n:translate="urban_bound_roaddecrees">Bound roaddecrees</span>
           :
          <tal:title replace="roaddecree/Title" />
        </a>
      </legend>
      <fieldset tal:repeat="inquiry inquiries">
        <legend>
          <span class="contenttype-inquiry"
                i18n:translate="inquiry_title_and_number"
          >
                    Inquiry
            <span tal:content="repeat/inquiry/number"
                  i18n:name="number"
            ></span>
          </span>
        </legend>
        <metal:parent_call use-macro="here/@@licencetabs-macros/inquiry_table-macro" />
      </fieldset>
    </fieldset>
  </tal:roaddecrees_inquiry>

                    event_configs view/getAllowedEventConfigs;
                  ">
    <!--legend i18n:translate="urban_create_events">Create event</legend-->
    <form action="create_UrbanEvent"
          method="POST"
          tal:condition="view/canAddUrbanEvent"
    >
      <select name="urban_event_infos">
        <tal:loopeventtype repeat="event_config event_configs">
          <option value=""
                  tal:content="event_config/Title"
                  tal:attributes="
                    value python: event_config.UID()+'|'+event_config.getEventPortalType();
                  "
          >
          </option>
        </tal:loopeventtype>
      </select>
      <input class="context apButton contenttype-urbanevent"
             type="submit"
             value="Add an event"
             i18n:attributes="value"
      />
    </form>
    <p class="discreet"
       tal:condition="not: event_configs"
       i18n:translate="urban_no_eventtype_defined"
    >
            No event type is defined in the configuration for this element
